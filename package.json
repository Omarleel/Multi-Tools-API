{
  "name": "smart-html-pdf",
  "version": "1.0.0",
  "private": true,
  "description": "CLI inteligente para convertir HTML a PDF con Node.js + TypeScript y paginación semántica.",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "check": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "express": "^5.2.1",
    "multer": "^2.1.0",
    "playwright": "^1.56.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.0",
    "tsx": "^4.20.0",
    "typescript": "^5.9.0"
  }
}
